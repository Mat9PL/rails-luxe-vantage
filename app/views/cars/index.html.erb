<h1>Cars#index</h1>
<p>Find me in app/views/cars/index.html.erb</p>
<ul class="card-list">
  <% @cars.each do |car| %>
    <li class="card-car">
      <%= image_tag car.photo %>
      <div class="card-car-infos">
        <div>
          <%= link_to car_path(car) do %>
            <h2><%= "#{car.brand} #{car.model}"%></h2>
          <% end %>
          <p><%= "Year: #{car.year} | Horse power: #{car.horse_power}" %></p>
        </div>
        <h2 class="card-car-pricing"><%= "#{car.price}â‚¬ per day" %></h2>
        <%= image_tag car.user.avatar, class: "card-car-user avatar-bordered" %>
      </div>
    </li>
  <% end %>
  <li class="card-car">
    <h2>
    <%= link_to 'Add new car', new_car_path %>
    </h2>
  </li>
</ul>
