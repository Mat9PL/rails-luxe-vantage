<div class="container">

  <div class="post-container">
    <div class="row">

      <div class="col-sm-5">
        <div class="post-image">
          <% @car.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class:"post-image img-fluid" %>
          <% end %>
        </div>
      </div>

      <div class="col-sm-7 align-self-center">
        <div class="post-list">
          <ul>
            <li>
              <%= simple_form_for [@car, @booking] do |f| %>
                <%= f.input :from %>
                <%= f.input :to %>
                <%= f.input :total_price %>
              <%= f.submit class: "form-button", value: "Book now"%>
              <% end %>
            </li>
            <li><%= "Name: "%><strong><%= "#{@car.brand} #{@car.model}" %></strong></li>
            <li><%= "Year: #{@car.year}" %></li>
            <li><%= "Horse power: #{@car.horse_power}" %></li>
            <li><%= "Price: #{@car.price}â‚¬/day" %></li>
          </ul>
          <%= link_to 'book now', cars_path, class: "btn btn-outline-light mx-4" %>
        </div>
      </div>

    </div>

    <div class="row">
      <div class="col-sm-12">
        <p><b><%= "Description:" %></b></p>
        <p><%= @car.description %></p>
        <%= link_to 'back to main menu', cars_path, class: "btn btn-ghost" %>

        <% if policy(@car).update? %>
          <%= link_to 'modify car', edit_car_path, class: "btn btn-ghost my-3" %>
        <% end %>
        <% if policy(@car).destroy? %>
          <%= link_to 'delete car', car_path, method: :delete, class: "btn btn-ghost" %>
        <% end %>
      </div>
    </div>

  </div>
</div>
